{
  "manifest_version": 2,
  "name": "SaveMyExams Revision Notes Hack",
  "version": "1.0",
  "description": "Removes paywalls and blur from SaveMyExams revision notes",
  
  "content_scripts": [
    {
      "matches": [
        "*://*.savemyexams.com/*",
        "*://savemyexams.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "permissions": [
    "*://*.savemyexams.com/*",
    "*://savemyexams.com/*"
  ],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "savemyexams-hack@yourdomain.com",
      "strict_min_version": "58.0"
    }
  }
}